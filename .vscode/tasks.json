{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build with g++",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++20",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": "$gcc"
      }
    ]
  }
  